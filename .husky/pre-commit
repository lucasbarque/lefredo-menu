(
  echo "âŒ - git add Failed. - âŒ\n View the errors above in order to fix them!"
  false;
)

(
  echo "âœ… - Formatted files successfully added to git, now compiling Typescript.."
  true;
) &&

npx tsc ||
(
  echo "âŒ - npx tsc Failed. - âŒ\n View the errors above in order to fix them!"
  false;
